<%- object = model_name(:ivar) -%>
.action-bar.-main.btn-group
  = link_to 'All <%= model_name(:humans) %>', <%= wui.path(:index) %>, class: 'btn btn-default'
  = link_to 'Edit', <%= wui.path(:edit, object) %>, class: 'btn btn-default'
  = link_to 'Destroy', <%= wui.path(:destroy, object) %>, method: :delete,
    class: 'btn btn-danger', data: { confirm: 'Really destroy?' }
<% wui.custom_actions.select(&:member?).each do |action| -%>
  = link_to '<%= action.name(:human).titleize %>', <%= wui.path(action, object) %>, class: 'btn btn-default'<%=
    ", method: :#{action.method}" unless action.get?
    %>
<% end -%>

%h1.page--title
  = <%= model_name(:ivar) %>

%dl
<% wui.model.renderable_attrs.each do |attribute| -%>
  <%- model_attribute = "#{object}.#{attribute.name}" -%>
  %dt
    = <%= model_name(:class) %>.human_attribute_name(:<%= attribute.name %>)
  %dd
  <%- case attribute.type -%>
  <%- when :string -%>
    = <%= model_attribute %>
  <%- when :email -%>
    = mail_to <%= model_attribute %>, nil
  <%- when :url -%>
    = link_to <%= model_attribute %>, <%= model_attribute %>
  <%- when :integer -%>
    = <%= model_attribute %>
  <%- when :money -%>
    = <%= model_attribute %>
    â‚¬
  <%- when :text -%>
    = simple_format(<%= model_attribute %>)
  <%- when :flag -%>
    = <%= model_attribute %> ? 'Yes' : 'No'
  <%- when :datetime -%>
    = l(<%= model_attribute %>.to_date) if <%= model_attribute %>
  <%- end -%>
<%- end -%>
